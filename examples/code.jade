
- var title = "Things"

-
  var subtitle = ["Really",  "long",
                  "list", "of",
                  "words"]
h1= title
h2= subtitle.join(" ")

ul#users
  each user, name in users
    // expands to if (user.isA == 'ferret')
    if user.isA == 'ferret'
      li(class='user-' + name) #{name} is just a ferret
    else
      li(class='user-' + name) #{name} #{user.email}